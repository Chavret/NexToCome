<%= simple_form_for event do |form| %>
  <%= form.input :headline %>
  <%= form.input :description %>
  <%= form.input :occurs_at, as: :string, label: "When is the event?", input_html: { class: 'datepicker' } %>
  <%= form.association :sub_category %>
  <%= form.input :rating, collection: (1..5) %>
  <%= form.input :status, collection: ["Pending", "Valid"] %>
  <%= form.button :submit %>
<% end %>

