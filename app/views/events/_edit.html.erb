<%= simple_form_for(event, html: { class: 'form-inline' }) do |form| %>
  <%= form.input :occurs_at, as: :string, label: "Date: ", input_html: { class: 'datepicker' } %>
  <%= form.input :headline %>
  <%= form.association :sub_category %>
  <%= form.input :rating, collection: (1..5) %>
  <%= form.input :description %>
  <%= form.input :status, collection: ["Pending", "Valid"] %>
  <%= form.button :submit %>
<% end %>

