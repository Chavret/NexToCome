<% events.each do |date, events| %>

  <div class="column">
    <h4><%= date.strftime("%A %e %B") %></h4>
    <div class="jours" >
      <% events.each do |event| %>
        <div id="event-div">
          <h5><%= event.sub_category.name %></h5>
          <p><%= event.headline %></p>
          <% unless event.description.nil? %>
            <div class="description hide"><%= event.description %></div>
          <% end %>

            <div class="fb-share-button" data-href="<%= request.url + '/' + event.id.to_s %>" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&amp;src=sdkpreparse">Partager</a></div> <!-- production: <%= request.url %> -->

        </div>
      <% end %>
    </div>
  </div>
<% end %>

