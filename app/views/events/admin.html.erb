<div class="page-content text-center">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-lg-2 col-lg-offset-1">
        <% @categories.each do |c|%>
          <div><%= c.name %></div>
        <% end%>

      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-4 col-lg-2 col-lg-offset-1">
        <% @sub_categories.each do |c|%>
          <div><%= c.name %></div>
        <% end %>

      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 text-center">
        <% if (policy(Event).create?) %>
          <%= render 'new', event: @event %>
        <% end %>
        <% @events.each do |e| %>
          <title><%= e.occurs_at %></title>
          <p><%= e.headline %></p>
          <div><%= e.status %></div>

          <% if policy(Event).update? %>
            <%= render 'edit', event: e %>
          <%end%>
        <%end%>
      </div>
    </div>
  </div>
</div>
