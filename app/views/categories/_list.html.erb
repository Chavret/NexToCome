<% i = 0 %>
<% categories.each do |category| %>
  <% i += 1 %>
  <% offset = i == 1 ? "col-xs-offset-1" : " "  %>

  <%= link_to events_path(category_filter_params(category.name)), remote: true do %>
    <div class="col-xs-2 <%= offset %> category-name <%= 'active' if @selected_categories.include?(category.name) %> cat-<%= category.name.downcase.delete(' ').gsub(/[èéêë]/,'e') %> "data-category-id="<%= category.id %>">
        <%= category.name %>
    </div>

  <% end %>

<% end %>
